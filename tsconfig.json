{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@project/*": ["./src/*"]
        },
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "types": ["jest"],
        "target": "es5",
        "composite": true,
        "declaration": true,
        "declarationMap": false,
        "outDir": "build",
        "removeComments": true,
        "rootDir": "src",
        "sourceMap": false
    },
    "include": ["src/**/*.ts", "src/**/*.json"],
    "exclude": ["node_modules", "build", "src/**/*spec*", "src/**/*test*"]
}
